<mvc:View xmlns:html="http://www.w3.org/1999/xhtml" 
          xmlns:mvc="sap.ui.core.mvc"
          xmlns:core="sap.ui.core" 
          xmlns="sap.m" 
          controllerName="ovly.modelos.controller.View1"
	displayBlock="true">
	<App id="idAppControl">
		<pages>
			<Page title="{i18n>title}">
				<content>
					<sap.ui.layout.form:SimpleForm editable="true" layout="ResponsiveGridLayout" xmlns:sap.ui.layout.form="sap.ui.layout.form"
						xmlns:sap.ui.core="sap.ui.core" >
						<sap.ui.layout.form:content>
							<sap.ui.core:Title text="Cadastro" />
							<Label text="Nome" />
							<Input width="100%" id="nome" value="{/nome}" />
							<Label text="Sobrenome" />
							<Input width="100%" id="sobrenome"  value="{/sobrenome}"/>
							<Label text="Cidade / Estado" />
							<Text text="{/cidade/nome} / {/cidade/estado}" />
							<Label text="Feliz" />
							<Switch state="{/feliz}" />
							<Label text="Skills" />
							<Select items="{/skills}" >
								<items>
									<core:Item text="{}" />
								</items>
							</Select>
						</sap.ui.layout.form:content>
					</sap.ui.layout.form:SimpleForm>
				</content>
			</Page>
		</pages>
	</App>
</mvc:View>